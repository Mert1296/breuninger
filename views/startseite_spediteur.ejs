<!DOCTYPE HTML>
<html>
<head>
    <style>

        .button {
            border: none;
            background:#861a22;
            padding: 8px;
            width: 180px;
            display: flex;
            overflow: hidden;
            color: white;
            font-weight: bold;
            margin: auto;
        }

        .button__inner-wrapper {
            width: 200%;
            white-space: nowrap;
            transform: translateX(-100%);
            transition: transform .3s ease;
        }

        .button__content {
            width: 100%;
            display: inline-block;
        }

        .button:hover .button__inner-wrapper {
            transform: translateX(0);
        }
       table.dataTable tbody tr.selected {
            color: black !important;
            background-color: #E6D1D2!important;
        }
    </style>
</head>
<body>

<div id="page">
    <nav class="fh5co-nav" role="navigation">
        <div class="container-wrap" style="height: 120px;">
            <div class="top-menu">
                <div class="row">
                    <div class="col-xs-2">
                        <div> <a href=/buchungen/startseite_spediteur><img src="../images/logo-breuninger.jpeg" style="padding-bottom:10px; width: 200px; height:70px;"></a></div>
                    </div>
                    <div class="col-lg-9 text-right menu-2" style="padding-top: 20px; padding-left: 120px;">
                        <ul>
                            <li class="active"><a href="/buchungen/startseite_spediteur"><span class="fa fa-home"></span> Startseite</a></li>
                            <li><a href="/users/benutzerinfo_spediteur"><span class="fa fa-user"></span> Benutzerinformation</a></li>
                            <li><a href="/users/logout"><span class="fa fa-power-off"></span> Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-wrap" style="background-color: lightgray">
        <div class="flexslider">
            <table id="example" class="display">
                <thead>
                <tr>
                    <th>Sendungsstruktur</th>
                    <th>Tor</th>
                    <th>Datum</th>
                    <th>Von</th>
                    <th>Bis</th>
                </tr>
                </thead>
                <tbody>
                <%for (var i = 0; i < buchungen.length; i++) {
                    var monat = 1 + buchungen[i].datepicker.getMonth();
                %>
                <tr>
                    <td><%=buchungen[i].user%></td>
                    <td><%=buchungen[i].tor%></td>
                    <td><%=buchungen[i].datepicker.getDate()+"."+monat+"."+buchungen[i].datepicker.getFullYear()%></td>
                    <td><%= buchungen[i].timepicker1%></td>
                    <td><%=buchungen[i].timepicker2%></td>
                    <form action="username" method="POST">
                        <input type="hidden" name="" value="">
                        <td><button id="buttonAnzeigen" type="submit" name="username" data-toggle="tooltip" title="Benutzer anzeigen"><a href="/users/benutzerinfo_breuninger"><i class="fas fa-search"></i></a></button></td>
                    </form>
                    <form action="delete" method="POST">
                        <td style="width: 40px;">
                            <button type="submit" id="buttonLöschen" data-toggle="tooltip" class="submit"name="loeschen" title="Benutzer löschen"><i class="fas fa-trash-alt"></i></button>
                            <input type="hidden" name="" value="">
                        </td>
                    </form>
                    <td><form action=""><button id="buttonAnzeigen" type="submit" name="buchung" href=""data-toggle="tooltip" title="Anzeigen"><i class="fas fa-search"></i></button></form></td>
                </tr>
                <% monat ++;
                    if(monat == 13){
                        monat = 1;
                    }
                }%>
                </tbody>
            </table>
            <div>
                <form action="/buchungen/neueBuchung_spediteur" style="padding: 25px"><button class="button">
				<span class="button__inner-wrapper">
     				 <span class="button__icon button__content">
						<i class="fas fa-plus"></i>
					 </span>
				<span class="button__label button__content">
       				Buchung hinzufügen
				</span>
				</span>

                    </button></form>
            </div>
        </div>
    </div><!-- END container-wrap -->
    <div class="container-wrap">
        <footer id="fh5co-footer" role="contentinfo">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h4>Kontaktinformation</h4>
                    <div class="fh5co-footer">
                        <p><br> E. Breuninger GmbH & Co. <br> <i class="fas fa-home"></i> &nbsp Eschenbrünnlestraße 11, 71065 Sindelfingen
                            <br>Mo-Fr 07:00 bis 15:00 Uhr
                            <br><i class="fas fa-phone-alt"></i><a href="tel://1234567920"> &nbsp +49 (0) 7031 / 616 2437</a>&nbsp;
                            <br><i class="fas fa-print"></i><a href="tel://1234567920"> &nbsp +49 (0) 7031 / 616 2036</a>&nbsp;
                            <br><i class="fas fa-envelope"></i><a href="mailto:info@breuninger.com"> &nbsp wareneingang.logistik@breuninger.de</a>
                            <br><a href="https://www.breuninger.com/de/"> www.breuninger.com</a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="row copyright">
                <div class="col-md-12 text-center"style="margin-bottom: 10px">
                    <p>
                        <small class="block">&copy; 2020 Breuninger. All Rights Reserved.</small>
                    </p>
                </div>
            </div>
        </footer>
    </div><!-- END container-wrap -->
</div>
<script>
    $(document).ready(function () {
        var table = $('#example').DataTable({
            bInfo: false,
            paging:false,
            searching: false,
            scrollY: "300px",
            ScrollCollapse: true,
            aaSortingFixed: [[2,'asc'],[3,'asc']]
        });

        $('#example tbody').on( 'click', 'tr', function () {
            if ( $(this).hasClass('selected') ) {
                $(this).removeClass('selected');
            }
            else {
                table.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
            }
        });

        $('#button').click( function () {
            table.row('.selected').remove().draw( false );
        });

    });
</script>
</body>
</html>