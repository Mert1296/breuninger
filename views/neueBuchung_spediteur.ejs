<form action="/buchungen/neueBuchung_spediteur" id ="myForm" method="POST">
    <div class="container-wrap">
        <div class="flexslider"  align="center" >
            <div>
                <h2>Neue Buchung</h2>
                <div class=" form-group card" id="hi" style="padding-top: 10px; padding-left: 30px; border-style: none;" >
                    <div class="ui-widget">
                        <select id="pick" name="sendungsstruktur" style="font-size: large; width: 300px">
                            <option value="0">Sendungsstruktur wählen..</option>
                            <option value="1">SPN - Liegeversand</option>
                            <option value="2">KEP - Paketversand</option>
                            <option value="3">HW - Liegeversand/Hängeversand</option>
                        </select>
                    </div>

                    <label for="sendungen" class="sendungen" style="padding-top: 30px;">Anzahl der geladenen Sendungen</label>
                    <input data-result="" data-time="5" type="text" class="form-control sendungen" id="sendungen" name="sendungen" style="border-radius: 10px; height: 35px; width: 300px;" placeholder="Anzahl der Sendungen angeben">

                    <label for="EUP" class="EUP" style="padding-top: 10px;">Anzahl der geladenen EUP</label>
                    <input data-result="" data-time="2" type="text" class="form-control EUP" id="EUP" name="EUP" style="border-radius: 10px; height: 35px; width: 300px;" placeholder="Anzahl der EUP angeben">

                    <label for="EWP" class="EWP" style="padding-top: 10px;">Anzahl der geladenen EWP</label>
                    <input data-result="" data-time="2" type="text" class="form-control EWP" id="EWP" name="EWP" style="border-radius: 10px; height: 35px; width: 300px;" placeholder="Anzahl der EWP angeben">

                    <label for="pakete" class="pakete" style="padding-top: 10px;">Anzahl der geladenen Pakete (lose) </label>
                    <input data-result="" data-time="1" type="text" class="form-control pakete" id="pakete" name="pakete" style="border-radius: 10px; height: 35px; width:300px;" placeholder="Anzahl der losen Pakete angeben">

                    <label for="bemerkung" class="bemerkung" style="padding-top: 10px;">Referenz</label>
                    <input type="text" class="form-control bemerkung" id="bemerkung" name="bemerkung" style="border-radius: 10px; height: 35px; width: 300px;" placeholder="Referenz angeben">

                    <label for="teile" class="teile" style="padding-top: 10px;">Anzahl der Teile</label>
                    <input data-result="" data-time="1" type="text" class="form-control teile" id="teile" name="teile" style="border-radius: 10px; height: 35px; width: 300px;" placeholder="Anzahl der Teile angeben">

                    <label for="submit" class="submit" style="padding-top: 10px;"></label>
                    <input type="button" class=" form-control submit" id="submit" style="text-align:center;border-radius: 10px; height: 40px; width: 300px; font-weight: bold; margin-top: 10px; color:#861a22 ;" value="Entladezeit berechnen">

                    <label class="zeit" style="padding-top: 20px">Benötigte Entladezeit:&nbsp &nbsp &nbsp &nbsp &nbsp &nbsp <strong style="text-decoration: underline; color: #861a22;" class="zeit-value"></strong></label>

                    <label for="datepicker" class="datepicker" style="padding-top: 15px;"> Datum</label>
                    <div class="input-container" style="position: relative">
                        <i class="far fa-calendar-alt" id="datepicker1" style="padding:10px; position: absolute; left:36%; padding: 9px 8px;" aria-hidden="true"></i>
                        <input type="text" class="form-control datepicker" id="datepicker" name="datepicker" style="border-radius: 10px; height: 35px; width: 300px; padding-left: 40px;" placeholder="&nbsp &nbsp Wählen Sie ein Datum">
                    </div>

                    <label for="timepicker1" class="timepicker1" style="padding-top: 10px;">Uhrzeit von </label>
                    <div class="input-container" style="position: relative">
                        <i class="far fa-clock" style="padding:10px; position: absolute; left:36%; padding: 9px 8px;" aria-hidden="true"></i>
                        <input type="text" class="form-control timepicker1" id="timepicker1" name="timepicker1" style="border-radius: 10px; height: 35px; width: 300px; padding-left: 40px;" placeholder="&nbsp &nbsp Wählen Sie eine Ankunftszeit">
                    </div>

                    <label for="timepicker2" class="timepicker2" style="padding-top: 10px;">Uhrzeit von </label>
                    <div class="input-container" style="position: relative">
                        <i class="far fa-clock" style="padding:10px; position: absolute; left:36%; padding: 9px 8px;" aria-hidden="true"></i>
                        <input type="text" class="form-control timepicker1" id="timepicker2" name="timepicker1" style="border-radius: 10px; height: 35px; width: 300px; padding-left: 40px;" placeholder="&nbsp &nbsp Wählen Sie eine Ankunftszeit">
                    </div>

                    <label class="torauswahl" style="padding-top: 10px;">Torauswahl
                        <p><select id="torauswahl" name="torauswahl" style="padding:10px;font-size: large; width: 300px">
                                <% for (var i = 0; i < gate.length; i++){
                                    var gates = gate[i];%>
                                    <option value="<%=gates[i]%>"><%=gates[i]%></option>
                                <%}%>
                            </select></p></label>

                    <!-- <button type="submit" id="submit" name="submit" style="width: 90px;" class="next">Buchen</button>-->
                </div>
                <label class="leer" style="padding-top: 350px"></label>
                <div class="weiterT" align="center">
