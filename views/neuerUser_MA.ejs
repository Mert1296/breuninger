            <script>
                $(document).ready(function () {
                    $('#example').DataTable({
                        searching: false,
                        bInfo: false,
                        paging: false,
                    });

                    $('.name, .zugehoerigkeit,.division, .strasse,.PLZ, .stadt, .username, .vorname, .land, .telefon, .email, .password, .password2, .submit,.torauswahl').hide();
                    $('#pick').change(function () {
                        if($('#pick').val() == "spediteur"){
                            $('.username, .vorname, .land, .telefon, .email, .password, .password2,.torauswahl, .submit,.division').show();
                            $('.name, .zugehoerigkeit, .strasse,.PLZ, .stadt,.leer').hide();
                        }
                        else if($('#pick').val() == "breuninger"){
                            $('.username, .vorname, .name, .zugehoerigkeit, .division, .strasse, .PLZ, .stadt, .land, .telefon ,.email, .password, .password2,.torauswahl, .submit').show();
                            $('.leer').hide();
                        }
                        else {
                            $('.name, .zugehoerigkeit,.division, .strasse,.PLZ, .stadt, .username, .vorname, .land, .telefon, .email, .password, .password2,.torauswahl .submit').hide();
                            $('.leer').show();
                        }
                    });
                    $('#torauswahl').multiselect();
                });
            </script>
