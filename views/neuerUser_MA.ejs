            <form action="/users/neuerUser_MA" method="POST">
                <div class="container-wrap">
                    <div class="flexslider" align="center">
                        <div>
                            <h2>Neuer Benutzer</h2>
                            <div class=" form-group card" style="padding-top: 10px; padding-left: 30px; border-style: none;">
                                <div class="ui-widget">
                                    <select id="pick" name="admin" style=" font-size: large; width: 300px">
                                        <option value="0" >Benutzer wählen..</option>
                                        <option value="spediteur">Spediteur</option>
                                        <option value="breuninger">Breuninger</option>
                                    </select>
                                </div>

                                <label for="username" class="username" style="padding-top: 30px;">Username</label>
                                <input type="text" minlength="3" class="form-control username" required id="username" name="usernames" style="border-radius: 10px; height: 35px; width: 300px;" placeholder="Username">

                                <label for="vorname" class="vorname" style="padding-top: 10px;">Name</label>
                                <input type="text" required class="form-control vorname" id="vorname" name="vorname" style="border-radius: 10px; height: 35px; width: 300px;" placeholder="Name">

                                <label for="name" class="name"style="padding-top: 10px;">Nachname</label>
                                <input type="text" class="form-control name" id="name" name="name" style="border-radius: 10px; height: 35px; width: 300px;" placeholder="Nachname">

                                <label for="division" class="division" style="padding-top: 10px;">Division</label>
                                <input type="text" class="form-control division" id="division" name="division" style="border-radius: 10px; height: 35px; width: 300px;" placeholder="Division">

                                <label for="strasse" class="strasse" style="padding-top: 10px;">Straße</label>
                                <input type="text" class="form-control strasse" id="strasse" name="strasse" style="border-radius: 10px; height: 35px; width: 300px;" placeholder="Straße des Standorts">

                                <label for="PLZ" class="PLZ" style="padding-top: 10px;">PLZ</label>
                                <input pattern="[0-9]{5}" maxlength="5" minlength="5" type="text" class="form-control PLZ" id="PLZ" name="PLZ" style="border-radius: 10px; height: 35px; width: 300px;" placeholder="PLZ">

                                <label for="stadt" class="stadt" style="padding-top: 10px;">Stadt</label>
                                <input type="text" class="form-control stadt" id="stadt" name="stadt" style="border-radius: 10px; height: 35px; width: 300px;" placeholder="Stadt">

                                <label class="land" style="padding-top: 10px;">Land
                                    <p><select id="land" name="land" style="font-size: large; width: 300px">
                                            <option value="DE">DE</option>
                                            <option value="EN">EN</option> </select></p></label>

                                <label class="torauswahl" style="padding-top: 3px;">Tore
                                    <p><select id="torauswahl" multiple="multiple" name="torauswahl" style="font-size: large; width: 300px">
                                            <option value="tor1">Tor 1</option>
                                            <option value="tor2">Tor 2</option>
                                            <option value="tor3">Tor 3</option>
                                            <option value="tor6">Tor 6</option>
                                            <option value="tor7">Tor 7</option>
                                            <option value="tor9">Tor 9</option>
                                            <option value="tor10">Tor 10</option>
                                        </select></p></label>

                                <label for="telefon" class="telefon" style="padding-top: 10px;">Telefon<br><small>Format: +49 178 123456</small></label>
                                <input type="text" class="form-control telefon" id="telefon" pattern="[\+]\d{2}\d{5,20}" name="telefon" style="border-radius: 10px; height: 35px; width: 300px;" placeholder="Telefon">

                                <label for="email" class="email" style="padding-top: 10px;">Email</label>
                                <input type="email" class="form-control email" id="email" name="email" required pattern="^[a-zA-Z0-9.!#$%&’*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)+$" style="border-radius: 10px; height: 35px; width: 300px;" placeholder="Email">

                                <label for="password" class="password" style="padding-top: 10px;">Passwort</label>
                                <input type="password" required minlength="8" class="form-control password" id="password" name="password" style="border-radius: 10px; height: 35px; width: 300px;" placeholder="Passwort">

                                <label for="password2" class="password2" style="padding-top: 10px;">Passwort wiederholen</label>
                                <input type="password" required minlength="8" class="form-control password2" id="password2" name="password2" style="border-radius: 10px; height: 35px; width: 300px;" placeholder="Passwort wiederholen">

