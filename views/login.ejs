<html lang="en">
<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        #anmelden {
            background-color: #861a22;
            border-color: #861a22;
        }
    </style>
</head>
<body>
<form action="/users/login" method="POST">
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h2 class="card-title text-center" style="font-weight: bold; font-size: xx-large">Login</h2>
                        <div>
                            <label for="username" style="padding-top: 20px;"></label>
                            <input type="text" id="username" name="username" class="form-control" placeholder="Username">
                        </div>
                        <div>
                            <label for="password" style="padding-top: 10px"></label>
                            <input type="password" id="password" name="password" placeholder="Passwort" class="form-control">
                        </div>
                        <div class="text-right p-t-13 p-b-23" style="padding-top: 5px">

                            <a href="/users/register">
                                Username / Passwort
                            </a> <span class="txt1">
							vergessen?
						</span>
                        </div><br><br>

                        <button class="btn btn-lg btn-primary btn-block text-uppercase" id="anmelden" type="submit">Anmelden</button>
                        <hr class="my-4">
                        <div class="flex-col-c p-t-170 p-b-40" style="text-align: center">
						<span class="txt1 p-b-9">
							Noch nicht registriert?
						</span><br>
                            <a href="/users/register">
                                Registrierung
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
</body>
</html>