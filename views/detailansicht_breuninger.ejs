<script>

    // Passwort anzeigen lassen
    function myFunction() {
        var x = document.getElementById("myInput");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }

    // DataTable
    $(document).ready(function () {
        $('#tabelle').DataTable({
            searching:false,
            bInfo: false,
            paging: false,
            ordering: false,
        });

        $('.edit').click(function(){
            $(this).hide();
            $(this).prev().hide();
            $(this).next().show();
            $(this).next().select();
        });

        //für Textfeld

        $('input[type="text"]').blur(function() {
            if ($.trim(this.value) == ''){
                this.value = (this.defaultValue ? this.defaultValue : '');
            }
            else{
                $(this).prev().prev().html(this.value);
            }

            $(this).hide();
            $(this).prev().show();
            $(this).prev().prev().show();
        });

        $('input[type="text"]').keypress(function(event) {
            if (event.keyCode == '13') {
                if ($.trim(this.value) == ''){
                    this.value = (this.defaultValue ? this.defaultValue : '');
                }
                else
                {
                    $(this).prev().prev().html(this.value);
                }

                $(this).hide();
                $(this).prev().show();
                $(this).prev().prev().show();
            }
        });

        //für Passwort

        $('input[type="password"]').blur(function() {
            if ($.trim(this.value) == ''){
                this.value = (this.defaultValue ? this.defaultValue : '');
            }

            $(this).hide();
            $(this).prev().show();
            $(this).prev().prev().show();
        });

        $('input[type="password"]').keypress(function(event) {
            if (event.keyCode == '14') {
                if ($.trim(this.value) == ''){
                    this.value = (this.defaultValue ? this.defaultValue : '');
                }

                $(this).hide();
                $(this).prev().show();
                $(this).prev().prev().show();
            }
        });

        // für tel

        $('input[type="tel"]').blur(function() {
            if ($.trim(this.value) == ''){
                this.value = (this.defaultValue ? this.defaultValue : '');
            }

            $(this).hide();
            $(this).prev().show();
            $(this).prev().prev().show();
        });

        $('input[type="tel"]').keypress(function(event) {
            if (event.keyCode == '14') {
                if ($.trim(this.value) == '') {
                    this.value = (this.defaultValue ? this.defaultValue : '');
                }

                $(this).hide();
                $(this).prev().show();
                $(this).prev().prev().show();
            }
        });

        $('input[type="email"]').blur(function() {
            if ($.trim(this.value) == ''){
                this.value = (this.defaultValue ? this.defaultValue : '');
            }

            $(this).hide();
            $(this).prev().show();
            $(this).prev().prev().show();
        });

        $('input[type="email"]').keypress(function(event) {
            if (event.keyCode == '14') {
